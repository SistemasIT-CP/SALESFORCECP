<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>total_negociado__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>jcsoto@casapellas.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>maestrada@casapellas.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Validar precio mínimo</label>
        <name>Validar_precio_minimo</name>
    </approvalStep>
    <emailTemplate>Plantillas_Email/Precio_Minimo_Informe_de_negociaci_n_Yamaha</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Informe_de_Negociaci_n__c.Monto_total_del_informe__c</field>
            <operation>equals</operation>
            <value>USD 0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Informe_de_Negociaci_n__c.Estado__c</field>
            <operation>notEqual</operation>
            <value>Aprobado</value>
        </criteriaItems>
        <criteriaItems>
            <field>Informe_de_Negociaci_n__c.Marca_Oportunidad__c</field>
            <operation>contains</operation>
            <value>YAMAHA</value>
        </criteriaItems>
        <criteriaItems>
            <field>Informe_de_Negociaci_n__c.Texto_Bandera__c</field>
            <operation>contains</operation>
            <value>Precio invalido</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Actualizar_bandera_a_aprobado</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Actualizar_bandera_a_rechazado</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Validar precio mínimo Yamaha</label>
    <processOrder>13</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
